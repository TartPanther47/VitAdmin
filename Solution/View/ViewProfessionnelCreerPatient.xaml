<Page x:Class="VitAdmin.View.ViewProfessionnelCreerPatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VitAdmin.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ViewProfessionnelCreerPatient"
      Name="WinProCreerPatient">

    <Grid Name="grdCreerPatient">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition />
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="24" Foreground="Gray">Nouveau patient</Label>

        <Button Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" MaxWidth="100" Content="Créer"
                Command="{Binding CmdBtnCreer}"
                CommandParameter="{Binding ElementName=WinProCreerPatient}"></Button>
    </Grid>
</Page>
