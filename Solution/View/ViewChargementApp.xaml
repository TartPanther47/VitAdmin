<Page x:Class="VitAdmin.View.ViewChargementApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VitAdmin.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewChargementApp">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="256"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="64"/>
            <RowDefinition/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="3" Grid.Row="1" HorizontalAlignment="Center">Menu temporaire pour la démontration permettant d'accéder à quelques uns des écrans</Label>
        <StackPanel Grid.Column="1"
                    Grid.Row="2">
            <Button Command="{Binding CmdAccueilAdministrateur}">Accueil administrateur</Button>
            <Button Command="{Binding CmdAccueilProfessionnel}">Accueil professionel</Button>
            <Button Command="{Binding CmdEcranHospitalisation}">Visualisation d'une hospitalisation</Button>
        </StackPanel>
    </Grid>
</Page>
