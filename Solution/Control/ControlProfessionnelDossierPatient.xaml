<UserControl x:Class="VitAdmin.Control.ControlProfessionnelDossierPatient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitAdmin.Control"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid Name="grdDossierPatient">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox VerticalAlignment="Center" Name="cboDepartements" Grid.Row="1"></ComboBox>
        
        <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="24" Foreground="Gray">Liste des hospitalisations</Label>

        <DataGrid Name="dtgDossierPatient" Grid.Row="2" Grid.ColumnSpan="4" ItemsSource="{Binding Hospitalisations}" IsReadOnly="True" AutoGenerateColumns="False">
            
           <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DataContext.DepartementAssocie.Nom, 
                    RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}}" Header="Département"/>
                <DataGridTextColumn Binding="{Binding DateDebut, StringFormat=\{0:dd-MM-yy HH:mm\}}" Header="Date début"/>
                <DataGridTextColumn Binding="{Binding DateFin, StringFormat=\{0:dd-MM-yy HH:mm\}}" Header="Date fin"/>
            </DataGrid.Columns>
            
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding CmdMouseDoubleClickHospit}"
                              CommandParameter="{Binding SelectedItem, ElementName=dtgDossierPatient}"/>

            </DataGrid.InputBindings>
        </DataGrid>
        <DatePicker Name="dtpkrDebut" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" SelectedDateChanged="dtpkrDebut_SelectedDateChanged"></DatePicker>
        <DatePicker Name="dtpkrFin" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" SelectedDateChanged="dtpkrFin_SelectedDateChanged"></DatePicker>
        <Button Grid.Row="1" Name="btnReset" Content="réinitialiser" Grid.Column="4" MaxWidth="120" Click="btnReset_Click"/>
    </Grid>
</UserControl>
