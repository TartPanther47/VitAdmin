<UserControl x:Class="VitAdmin.Control.ControlTextBoxHospitalisation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitAdmin.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label Content="{Binding NomLabel}"
               FontSize="70"
               FontWeight="DemiBold"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"/>
        
        <Border Grid.Row="1"
                Background="LightGray" BorderBrush="GhostWhite" BorderThickness="2" Margin="10">

            <TextBox Grid.Row="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     SpellCheck.IsEnabled="True"
                     VerticalContentAlignment="Top"
                     Text="{Binding datatext}" Margin="10"/>
        </Border>

    </Grid>
</UserControl>
