<UserControl x:Class="VitAdmin.Control.ControlAjoutPrescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitAdmin.Control"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label></Label>
        <TextBox Grid.Row="0" Name="produit"></TextBox>
        <TextBox Grid.Row="1" Name="posologie"></TextBox>
        <DatePicker Grid.Row="2" Name="dateDebut"></DatePicker>
        <xctk:IntegerUpDown Width="50" Height="50" Grid.Row="3" Name="myUpDownControl"/>
    </Grid>
</UserControl>
