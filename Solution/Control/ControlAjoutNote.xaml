<UserControl x:Class="VitAdmin.Control.ControlAjoutNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitAdmin.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="210"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Name="Note" AcceptsReturn="True" Height="150" Width="280" Margin="10,10,10,50" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBox>
        <CheckBox Grid.Row="2" Name="Notifier" Margin="110,0,10,0" Height="30" Width="65" HorizontalAlignment="Left">Notifier</CheckBox>
        <Label Grid.Row="1" Height="30" Width="200" Foreground="Red" Content="{Binding MessageErreur}"></Label>
        <Button Grid.Row="2" Click="Confirmer_Click" Name="Confirmer" Width="100" Margin="10,10,10,10" HorizontalAlignment="Right">Confirmer</Button>

    </Grid>
</UserControl>
