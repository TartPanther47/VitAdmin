<UserControl x:Class="VitAdmin.Control.ControlAjoutQuart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VitAdmin.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Foreground="Gray" FontSize="24" Margin="20,20,20,20">Départements</Label>
        
        <ComboBox Grid.Row="1" Name="cboDeparts" ItemsSource="{Binding LstNomsDepartements}" Width="150" Margin="20,20,20,20">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Nom}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Grid.Row="2" Command="{Binding }" Name="Confirmer" Width="100" Margin="10,10,10,10" HorizontalAlignment="Right">Confirmer</Button>
    </Grid>
</UserControl>
